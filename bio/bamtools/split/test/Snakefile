rule bamtools_split:
    input:
        "mapped/{sample}.bam",
    output:
        "mapped/{sample}.sorted.bam.bai",
    params:
        #  -reference is the default value and can be left out, could also be '-paired' and '-tag <tag_name>'
        split_type="-reference",
    log:
        "logs/bamtoos_split/{sample}.log",
    wrapper:
        "master/bio/bamtools/split"
